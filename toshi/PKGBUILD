pkgname=toshi-segment
pkgver=2.0.17
pkgrel=3
pkgdesc="Program from Toshis master's thesis"
arch=('x86_64' 'i686')
url='http://davehub.net'
license=('LGPL3')
makedepends=('opencv2' 'gcc' 'make')
source=("toshi.tar.gz")
sha256sums=('9c399d79d89c1e930e9848ac4aeb97a8a6ddafaff29fc489f5546fc42a71eb6d')

build() {
  cd "${srcdir}"
  make
}

package() {
  cd "${srcdir}"
  install -D -m755 main.out $pkgdir/usr/bin/toshi-segment
}
